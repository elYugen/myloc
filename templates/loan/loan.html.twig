{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
<style>
    .miniMenu {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: -10px;
    }
</style>

<div class="miniMenu">
    <p>Accueil - Emprunter un objet</p>
</div>


<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="card-title">Emprunter l'objet {{ items.name }}</h1>
        </div>
        <div class="card-body">
          {{ form(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}